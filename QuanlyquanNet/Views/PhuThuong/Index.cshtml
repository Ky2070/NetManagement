@model IEnumerable<QuanlyquanNet.Data.PhuThuong>

@{
    ViewData["Title"] = "Danh sách phần thưởng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Thêm phần thưởng</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.MaPhuThuong)</th>
            <th>@Html.DisplayNameFor(model => model.TenPhuThuong)</th>
            <th>@Html.DisplayNameFor(model => model.DiemCanDoi)</th>
            <th>@Html.DisplayNameFor(model => model.NgayTao)</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaPhuThuong</td>
                    <td>@item.TenPhuThuong</td>
                    <td>@item.DiemCanDoi</td>
                    <td>@item.NgayTao?.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.MaPhuThuong">🔍 Xem</a> |
                        <a asp-action="Edit" asp-route-id="@item.MaPhuThuong">✏️ Sửa</a> |
                        <a asp-action="Delete" asp-route-id="@item.MaPhuThuong" onclick="return confirm('Bạn có chắc muốn xoá phần thưởng này không?')">🗑️ Xoá</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">Không có phần thưởng nào.</td>
            </tr>
        }
    </tbody>
</table>
