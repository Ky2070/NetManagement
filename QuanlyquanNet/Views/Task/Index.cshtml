@{
    Layout = null;
    var customers = ViewBag.Customers as List<QuanlyquanNet.Data.KhachHang>;
}
<section class="section bg-light py-5" id="create-task">
    <div class="container">
        <!-- Tiêu đề -->
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8 text-center">
                <h2 class="fw-bold mb-3">🎯 Tạo nhiệm vụ cho khách</h2>
                <p class="text-muted fs-5">Chọn khách hàng và game để hệ thống tự tạo nhiệm vụ phù hợp.</p>
            </div>
        </div>

        <!-- Form tạo nhiệm vụ -->
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow rounded-4 border-0">
                    <div class="card-body p-4">
                        <form method="post" asp-controller="Task" asp-action="Create">
                            <div class="mb-3">
                                <label for="customerId" class="form-label fw-semibold">👤 Khách hàng</label>
                                <select class="form-select rounded-pill px-3 py-2" id="customerId" name="customerId" required>
                                    <option selected disabled>-- Chọn khách hàng --</option>
                                    @foreach (var customer in customers)
                                    {
                                        <option value="@customer.MaKhachHang">@customer.HoTen</option>
                                    }
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="gameName" class="form-label fw-semibold">🎮 Chọn game</label>
                                <select class="form-select rounded-pill px-3 py-2" id="gameName" name="gameName" required>
                                    <option selected disabled>-- Chọn game --</option>
                                    <option value="Valorant">Valorant</option>
                                    <option value="League of Legends">League of Legends</option>
                                    <option value="CS:GO">CS:GO</option>
                                    <option value="Dota 2">Dota 2</option>
                                    <option value="PUBG">PUBG</option>
                                </select>
                            </div>

                            <div class="d-grid mt-4">
                                <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold">🚀 Tạo nhiệm vụ</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Nhiệm vụ mới được tạo -->
        @if (ViewBag.Mission != null)
        {
            <div class="row justify-content-center mt-5">
                <div class="col-lg-8">
                    <div class="card shadow-lg rounded-4">
                        <div class="card-header bg-success text-white rounded-top-4">
                            <h5 class="mb-0 fw-semibold">✅ Nhiệm vụ đã tạo</h5>
                        </div>
                        <div class="card-body p-4">
                            <p><strong>👤 Khách:</strong> @ViewBag.Customer</p>
                            <p><strong>🎮 Game:</strong> @ViewBag.Game</p>
                            <p><strong>📝 Nhiệm vụ:</strong> @ViewBag.Mission</p>
                            <p><strong>⭐ Điểm thưởng:</strong> @ViewBag.Points điểm</p>
                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <form method="post" asp-controller="Task" asp-action="Complete">
                                    <input type="hidden" name="customerId" value="@ViewBag.CustomerId" />
                                    <button type="submit" class="btn btn-outline-success rounded-pill">✔ Hoàn thành</button>
                                </form>
                                <button class="btn btn-outline-secondary rounded-pill" onclick="window.print()">🖨 In nhiệm vụ</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Danh sách nhiệm vụ đã tạo -->
        @if (ViewBag.AssignedTasks != null)
        {
            <div class="row justify-content-center mt-5">
                <div class="col-lg-10">
                    <div class="card border-0 shadow-sm rounded-4">
                        <div class="card-header bg-primary text-white rounded-top-4">
                            <h5 class="mb-0 fw-semibold">📋 Danh sách nhiệm vụ gần đây</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>👤 Khách hàng</th>
                                            <th>📝 Nhiệm vụ</th>
                                            <th>🎮 Game</th>
                                            <th>⭐ Điểm</th>
                                            <th>📅 Ngày giao</th>
                                            <th>📌 Trạng thái</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.AssignedTasks)
                                        {
                                            <tr>
                                                <td>@item.KhachHang</td>
                                                <td>@item.TenNhiemVu</td>
                                                <td>@item.Game</td>
                                                <td>@item.DiemThuong</td>
                                                <td>@item.NgayThamGia.ToString("dd/MM/yyyy HH:mm")</td>
                                                <td>
                                                    <span class="badge bg-@(item.TrangThai == "Hoàn thành" ? "success" : "warning") text-dark px-3 py-2 rounded-pill">
                                                        @item.TrangThai
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
