@model QuanlyquanNet.Data.NhiemVu

@{

    ViewData["Title"] = "Sửa nhiệm vụ";
}

<div class="container mt-4">
    <h2>Sửa nhiệm vụ</h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MaNhiemVu" />
        <input type="hidden" asp-for="NgayTao" />
        <div class="form-group">
            <label asp-for="TenNhiemVu" class="control-label">Tên nhiệm vụ</label>
            <input asp-for="TenNhiemVu" class="form-control" required maxlength="100" />
            <span asp-validation-for="TenNhiemVu" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MoTa" class="control-label">Mô tả</label>
            <textarea asp-for="MoTa" class="form-control" maxlength="255"></textarea>
            <span asp-validation-for="MoTa" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DieuKien" class="control-label">Điều kiện</label>
            <input asp-for="DieuKien" class="form-control" maxlength="255" />
            <span asp-validation-for="DieuKien" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DiemThuong" class="control-label">Điểm thưởng</label>
            <input asp-for="DiemThuong" class="form-control" type="number" min="0" required />
            <span asp-validation-for="DiemThuong" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DoKho" class="control-label">Độ khó (1-5)</label>
            <input asp-for="DoKho" class="form-control" type="number" min="1" max="5" />
            <span asp-validation-for="DoKho" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Hình ảnh hiện tại</label>
            @if (!string.IsNullOrEmpty(Model.HinhAnh))
            {
                <div>
                    <img src="@Model.HinhAnh" alt="@Model.TenNhiemVu" style="max-width: 200px;" />
                </div>
            }
            else
            {
                <p>Chưa có hình ảnh</p>
            }
        </div>
        <div class="form-group">
            <label class="control-label">Thay đổi hình ảnh</label>
            <input type="file" name="HinhAnh" class="form-control" accept=".jpg" />
            <span class="text-danger">@Html.ValidationMessage("HinhAnh")</span>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Lưu" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}