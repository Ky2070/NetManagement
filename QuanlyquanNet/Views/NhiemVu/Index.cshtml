@using System.Collections.Generic
@model IEnumerable<QuanlyquanNet.Data.NhiemVu>

@{
    ViewData["Title"] = "Danh sách nhiệm vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-controller="NhiemVu" asp-action="Add" class="btn btn-primary">➕ Thêm nhiệm vụ</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.MaNhiemVu)</th>
            <th>@Html.DisplayNameFor(model => model.TenNhiemVu)</th>
            <th>@Html.DisplayNameFor(model => model.MoTa)</th>
            <th>@Html.DisplayNameFor(model => model.MaPhuThuong)</th>
            <th>@Html.DisplayNameFor(model => model.DoKho)</th>
            <th>@Html.DisplayNameFor(model => model.NgayTao)</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaNhiemVu</td>
                <td>@item.TenNhiemVu</td>
                <td>@(string.IsNullOrEmpty(item.MoTa) ? "Không có" : item.MoTa)</td>
                <td>@(item.MaPhuThuong.HasValue ? item.MaPhuThuongNavigation?.TenPhuThuong : "Chưa có")</td>
                <td>@(item.DoKho.HasValue ? item.DoKho : "Chưa xác định")</td>
                <td>@(item.NgayTao.HasValue ? item.NgayTao.Value.ToString("dd/MM/yyyy") : "Chưa có")</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.MaNhiemVu">🔍 Xem</a> |
                    <a asp-action="Update" asp-route-id="@item.MaNhiemVu">✏️ Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaNhiemVu">🗑️ Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>