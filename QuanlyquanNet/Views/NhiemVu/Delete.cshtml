@model QuanlyquanNet.Data.NhiemVu

@{
    ViewData["Title"] = "Xóa nhiệm vụ";
}

<div class="container mt-4">
    <h2 class="text-danger mb-4">Xóa nhiệm vụ</h2>
    <h5 class="mb-4">Bạn có chắc chắn muốn xóa nhiệm vụ sau không?</h5>

    <div class="border p-3 rounded shadow-sm bg-light">
        <dl class="row">
            <dt class="col-sm-3">Mã nhiệm vụ</dt>
            <dd class="col-sm-9">@Model.MaNhiemVu</dd>

            <dt class="col-sm-3">Tên nhiệm vụ</dt>
            <dd class="col-sm-9">@Model.TenNhiemVu</dd>

            <dt class="col-sm-3">Điểm thưởng</dt>
            <dd class="col-sm-9">@Model.DiemThuong</dd>

            <dt class="col-sm-3">Độ khó</dt>
            <dd class="col-sm-9">@Model.DoKho</dd>

            <dt class="col-sm-3">Hình ảnh</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.HinhAnh))
                {
                    <img src="@Model.HinhAnh" alt="@Model.TenNhiemVu" class="img-thumbnail" style="max-width: 200px;" />
                }
                else
                {
                    <span class="text-muted">Không có hình ảnh</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="MaNhiemVu" />
            <button type="submit" class="btn btn-danger me-2">Xóa</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>
