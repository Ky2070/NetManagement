@model IEnumerable<QuanlyquanNet.Data.KhachHangNhiemVu>

@{
    ViewData["Title"] = "Danh sách Khách Hàng Nhiệm Vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Thêm Khách Hàng Nhiệm Vụ</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.MaKhachHang)</th>
            <th>@Html.DisplayNameFor(model => model.MaKhachHangNavigation.HoTen)</th>
            <th>@Html.DisplayNameFor(model => model.MaNhiemVuNavigation.TenNhiemVu)</th>
            <th>@Html.DisplayNameFor(model => model.TrangThai)</th>
            <th>@Html.DisplayNameFor(model => model.NgayThamGia)</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaKhachHang</td>
                <td>@item.MaKhachHangNavigation.HoTen</td>
                <td>@item.MaNhiemVuNavigation.TenNhiemVu</td>
                <td>@item.TrangThai</td>
                <td>@item.NgayThamGia?.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaKhachHang">🔍 Xem</a> |
                    <a asp-action="Edit" asp-route-id="@item.MaKhachHang">✏️ Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaKhachHang">🗑️ Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
