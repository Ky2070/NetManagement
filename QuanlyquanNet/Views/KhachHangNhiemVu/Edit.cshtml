@model QuanlyquanNet.Data.KhachHangNhiemVu

@{
    ViewData["Title"] = "Chỉnh sửa Khách Hàng Nhiệm Vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="MaKhachHang" class="control-label"></label>
        <select asp-for="MaKhachHang" class="form-control" asp-items="ViewBag.MaKhachHang"></select>
    </div>

    <div class="form-group">
        <label asp-for="MaNhiemVu" class="control-label"></label>
        <select asp-for="MaNhiemVu" class="form-control" asp-items="ViewBag.MaNhiemVu"></select>
    </div>

    <div class="form-group">
        <label asp-for="TrangThai" class="control-label"></label>
        <input asp-for="TrangThai" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    </div>
</form>

