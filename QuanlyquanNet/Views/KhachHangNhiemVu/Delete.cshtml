@model QuanlyquanNet.Data.KhachHangNhiemVu

@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    ViewData["Title"] = "Xóa khách hàng - nhiệm vụ";
}

<div class="container mt-4">
    <h2>Xóa khách hàng - nhiệm vụ</h2>
    <h3>Bạn có chắc chắn muốn xóa bản ghi này?</h3>
    <dl class="row">
        <dt class="col-sm-3">Khách hàng</dt>
        <dd class="col-sm-9">@(Model?.MaKhachHangNavigation?.HoTen ?? "Không có")</dd>
        <dt class="col-sm-3">Nhiệm vụ</dt>
        <dd class="col-sm-9">@(Model?.MaNhiemVuNavigation?.TenNhiemVu ?? "Không có")</dd>
        <dt class="col-sm-3">Trạng thái</dt>
        <dd class="col-sm-9">@(Model?.TrangThai ?? "Chưa hoàn thành")</dd>
        <dt class="col-sm-3">Thời gian hoàn thành</dt>
        <dd class="col-sm-9">@(Model?.ThoiGianHoanThanh?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa có")</dd>
        <dt class="col-sm-3">Điểm nhận được</dt>
        <dd class="col-sm-9">@(Model?.DiemNhanDuoc?.ToString() ?? "0")</dd>
        <dt class="col-sm-3">Ngày tham gia</dt>
        <dd class="col-sm-9">@(Model?.NgayThamGia?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa có")</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaKhachHang" />
        <input type="hidden" asp-for="MaNhiemVu" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>