@model QuanlyquanNet.Data.DonHang

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Chỉnh sửa đơn hàng</h3>
<hr />
<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="MaKhachHang" class="control-label"></label>
        <select asp-for="MaKhachHang" class="form-control" asp-items="ViewBag.MaKhachHang"></select>
    </div>

    <div class="form-group">
        <label asp-for="MaDichVu" class="control-label"></label>
        <select asp-for="MaDichVu" class="form-control" asp-items="ViewBag.MaDichVu"></select>
    </div>

    <div class="form-group">
        <label asp-for="SoLuong" class="control-label"></label>
        <input asp-for="SoLuong" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ThongTinViTri" class="control-label"></label>
        <input asp-for="ThongTinViTri" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TongTien" class="control-label"></label>
        <input asp-for="TongTien" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    </div>
</form>

