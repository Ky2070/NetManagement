@model QuanlyquanNet.Data.DonHang

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var maKhachHangList = ViewData["MaKhachHang"] as SelectList;
    var maDichVuList = ViewData["MaDichVu"] as SelectList;
}

<h1>@ViewData["Title"]</h1>

<h3>Chỉnh sửa đơn hàng</h3>
<hr />

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="MaDonHang" />

            <div class="form-group">
                <label asp-for="MaKhachHang" class="control-label"></label>
                @if (maKhachHangList == null || !maKhachHangList.Any())
                {
                    <p class="text-danger">Không có khách hàng để chọn.</p>
                    <select asp-for="MaKhachHang" class="form-control" disabled></select>
                }
                else
                {
                    <select asp-for="MaKhachHang" class="form-control" asp-items="maKhachHangList"></select>
                }
                <span asp-validation-for="MaKhachHang" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaDichVu" class="control-label"></label>
                @if (maDichVuList == null || !maDichVuList.Any())
                {
                    <p class="text-danger">Không có dịch vụ để chọn.</p>
                    <select asp-for="MaDichVu" class="form-control" disabled></select>
                }
                else
                {
                    <select asp-for="MaDichVu" class="form-control" asp-items="maDichVuList"></select>
                }
                <span asp-validation-for="MaDichVu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" type="number" min="1" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ThongTinViTri" class="control-label"></label>
                <input asp-for="ThongTinViTri" class="form-control" />
                <span asp-validation-for="ThongTinViTri" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TongTien" class="control-label"></label>
                <input asp-for="TongTien" class="form-control" type="number" min="0" step="0.01" />
                <span asp-validation-for="TongTien" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
