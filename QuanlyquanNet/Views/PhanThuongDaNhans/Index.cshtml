@model IEnumerable<PhanThuongDaNhan>

@{
    ViewData["Title"] = "Quản lý phần thưởng đã nhận";
}

<h1 class="mb-4 text-primary">Danh sách phần thưởng đã nhận</h1>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.NgayNhan)</th>
            <th>@Html.DisplayNameFor(model => model.MaKhachHangNavigation)</th>
            <th>@Html.DisplayNameFor(model => model.MaPhuThuongNavigation)</th>
            <th style="width: 160px">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NgayNhan)</td>
                <td>@Html.DisplayFor(modelItem => item.MaKhachHangNavigation.TenDangNhap)</td>
                <td>@Html.DisplayFor(modelItem => item.MaPhuThuongNavigation.MaPhuThuong)</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.MaPhanThuong">Sửa</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.MaPhanThuong">Chi tiết</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.MaPhanThuong">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-end mt-3">
    <a class="btn btn-success" asp-action="Create">+ Thêm mới</a>
</div>
