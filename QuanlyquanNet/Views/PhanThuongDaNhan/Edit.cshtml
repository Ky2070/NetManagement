@model QuanlyquanNet.Data.PhanThuongDaNhan

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Sửa phần thưởng đã nhận";
}

<div class="container mt-4">
    <h2>Sửa phần thưởng đã nhận</h2>
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MaPhanThuong" />
        <div class="form-group">
            <label asp-for="MaKhachHang" class="control-label"></label>
            <select asp-for="MaKhachHang" class="form-control" asp-items="ViewBag.MaKhachHang" required>
                <option value="">Chọn khách hàng</option>
            </select>
            <span asp-validation-for="MaKhachHang" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MaPhuThuong" class="control-label"></label>
            <select asp-for="MaPhuThuong" class="form-control" asp-items="ViewBag.MaPhuThuong" required>
                <option value="">Chọn phần thưởng</option>
            </select>
            <span asp-validation-for="MaPhuThuong" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NgayNhan" class="control-label"></label>
            <input asp-for="NgayNhan" class="form-control" type="datetime-local" />
            <span asp-validation-for="NgayNhan" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Lưu" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}