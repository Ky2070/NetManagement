@model QuanlyquanNet.Data.PhanThuongDaNhan

<div style="margin-top: 65px;">
    <h1 style="color: white;">Chi Tiết Phần Thưởng</h1>

    <div style="border: 2px solid white; padding: 20px; border-radius: 8px; color: white;">
        <dl class="row" style="margin: 0;">
            <dt class="col-sm-2" style="margin-bottom: 15px;">Mã Phần Thưởng</dt>
            <dd class="col-sm-10" style="margin-bottom: 15px;">@Model.MaPhanThuong</dd>

            <dt class="col-sm-2" style="margin-bottom: 15px;">Khách Hàng</dt>
            <dd class="col-sm-10" style="margin-bottom: 15px;">@Model.MaKhachHangNavigation.HoTen</dd>

            <dt class="col-sm-2" style="margin-bottom: 15px;">Phần Thưởng</dt>
            <dd class="col-sm-10" style="margin-bottom: 15px;">@Model.MaPhuThuongNavigation.TenPhuThuong</dd>

            <dt class="col-sm-2" style="margin-bottom: 15px;">Ngày Nhận</dt>
            <dd class="col-sm-10" style="margin-bottom: 15px;">@Model.NgayNhan?.ToString("dd/MM/yyyy")</dd>
        </dl>
    </div>

    <a asp-action="Index" class="btn btn-secondary" style="color: white; margin-top: 20px;">Quay lại</a>
</div>