@model QuanlyquanNet.Data.DichVu

@{
    ViewData["Title"] = "Chi tiết Dịch Vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <h4>@Model.TenDichVu</h4>
        <p><strong>Giá:</strong> @Model.Gia</p>
        <p><strong>Loại dịch vụ:</strong> @Model.LoaiDichVu</p>

        <p><strong>Ảnh:</strong></p>
        @if (!string.IsNullOrEmpty(Model.HinhAnh))
        {
            <img src="@Model.HinhAnh" alt="@Model.TenDichVu" width="200" height="200" />
        }
        else
        {
            <p>Chưa có ảnh</p>
        }
    </div>
</div>

<a asp-action="Index">Back to List</a>
