@model QuanlyquanNet.Data.DichVu

@{
    ViewData["Title"] = "Thêm Dịch Vụ";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <!-- Tăng độ rộng từ col-md-8 lên col-md-10 -->
            <div class="card shadow-lg border-0 rounded-4 p-4">
                <!-- Thêm padding -->
                <div class="card-header bg-dark text-white rounded-top-4">
                    <h3 class="mb-0 fs-3"><i class="fas fa-plus-circle me-2"></i>Thêm Dịch Vụ Mới</h3>
                </div>
                <div class="card-body bg-light">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="TenDichVu" class="form-label fw-bold"><i class="fas fa-keyboard me-1"></i> Tên Dịch Vụ</label>
                            <input asp-for="TenDichVu" class="form-control form-control-lg" placeholder="Nhập tên dịch vụ..." />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Gia" class="form-label fw-bold"><i class="fas fa-coins me-1"></i> Giá (VNĐ)</label>
                            <input asp-for="Gia" class="form-control form-control-lg" placeholder="VD: 10000" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="LoaiDichVu" class="form-label fw-bold"><i class="fas fa-tags me-1"></i> Loại Dịch Vụ</label>
                            <input asp-for="LoaiDichVu" class="form-control form-control-lg" placeholder="VD: Đồ uống / Ăn vặt / Khác" />
                        </div>

                        <div class="mb-4">
                            <label asp-for="HinhAnh" class="form-label fw-bold"><i class="fas fa-image me-1"></i> Ảnh Dịch Vụ</label>
                            <input type="file" name="HinhAnhFile" class="form-control form-control-lg" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary btn-lg"><i class="fas fa-arrow-left me-1"></i> Quay lại</a>
                            <button type="submit" class="btn btn-success btn-lg"><i class="fas fa-plus me-1"></i> Thêm Dịch Vụ</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
