@model QuanlyquanNet.Data.DichVu

@{
    ViewData["Title"] = "Thêm Dịch Vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<!-- Form có enctype="multipart/form-data" để gửi tệp -->
<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="TenDichVu" class="control-label"></label>
        <input asp-for="TenDichVu" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Gia" class="control-label"></label>
        <input asp-for="Gia" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LoaiDichVu" class="control-label"></label>
        <input asp-for="LoaiDichVu" class="form-control" />
    </div>

    <!-- Thêm phần input để chọn ảnh -->
    <div class="form-group">
        <label asp-for="HinhAnh" class="control-label">Chọn ảnh</label>
        <input type="file" name="HinhAnhFile" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Thêm Dịch Vụ</button>
    </div>
</form>

<a asp-action="Index">Back to List</a>
