@model QuanlyquanNet.Data.DichVu

@{
    ViewData["Title"] = "Xóa Dịch Vụ";
}

<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow-lg border-0 rounded-4 p-5">
                <div class="card-header bg-danger text-white rounded-top-4">
                    <h2 class="mb-0 fs-1"><i class="fas fa-trash-alt me-2"></i>Xóa Dịch Vụ</h2>
                </div>

                <div class="card-body bg-light">
                    <h4 class="text-danger fw-bold mb-4">Bạn có chắc chắn muốn xóa dịch vụ này không?</h4>

                    <dl class="row mb-4 fs-5">
                        <dt class="col-sm-3 fw-bold">Tên Dịch Vụ</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.TenDichVu)</dd>

                        <dt class="col-sm-3 fw-bold">Giá</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Gia)</dd>

                        <dt class="col-sm-3 fw-bold">Loại Dịch Vụ</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.LoaiDichVu)</dd>

                        <dt class="col-sm-3 fw-bold">Ngày Tạo</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.NgayTao)</dd>

                        <dt class="col-sm-3 fw-bold">Hình Ảnh</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.HinhAnh))
                            {
                                <img src="@Model.HinhAnh" alt="@Model.TenDichVu" class="img-thumbnail shadow" style="max-height: 200px;" />
                            }
                            else
                            {
                                <div class="text-muted fst-italic">Không có ảnh</div>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="MaDichVu" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                                <i class="fas fa-arrow-left me-2"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg px-4">
                                <i class="fas fa-trash-alt me-2"></i> Xác nhận xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
