@model QuanlyquanNet.Data.DichVu

@{
    ViewData["Title"] = "Chỉnh sửa Dịch Vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<!-- Hiển thị lỗi tổng quát -->
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="MaDichVu" />
    <input type="hidden" asp-for="NgayTao" />

    <div class="form-group">
        <label asp-for="TenDichVu" class="control-label"></label>
        <input asp-for="TenDichVu" class="form-control" />
        <span asp-validation-for="TenDichVu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gia" class="control-label"></label>
        <input asp-for="Gia" class="form-control" />
        <span asp-validation-for="Gia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LoaiDichVu" class="control-label"></label>
        <input asp-for="LoaiDichVu" class="form-control" />
        <span asp-validation-for="LoaiDichVu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Hình ảnh hiện tại</label>
        @if (!string.IsNullOrEmpty(Model.HinhAnh))
        {
            <img src="@Model.HinhAnh" alt="@Model.TenDichVu" style="max-width: 100px;" />
        }
        else
        {
            <span>Không có ảnh</span>
        }
    </div>

    <div class="form-group">
        <label class="control-label">Chọn ảnh mới</label>
        <input type="file" name="hinhAnhFile" class="form-control" />
        <span asp-validation-for="HinhAnh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    </div>
</form>

<a asp-action="Index">Quay lại danh sách</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}