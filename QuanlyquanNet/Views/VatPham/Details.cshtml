@model QuanlyquanNet.Data.VatPham

@{
    ViewData["Title"] = "Chi Tiết Vật Phẩm";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <h4>@Model.TenVatPham</h4>
        <p><strong>Mô tả:</strong> @Model.MoTa</p>
        <p><strong>Điểm Cần Đổi:</strong> @Model.DiemCanDoi</p>
        <p><strong>Giá Mua:</strong> @Model.GiaMua</p>
        <p><strong>Số Lượng Tồn:</strong> @Model.SoLuongTon</p>
        <p><strong>Ngày Tạo:</strong> @Model.NgayTao?.ToString("dd/MM/yyyy")</p>
    </div>
</div>

