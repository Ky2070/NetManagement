@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    ViewData["Title"] = "Danh sách khu vực";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container mt-4">
    <h2>Danh sách khu vực</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Thêm khu vực mới</a>
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Mã khu vực</th>
                <th>Tên khu vực</th>
                <th>Mô tả</th>
                <th>Giá mỗi giờ</th>
                <th>Hình ảnh</th>
                <th>Ngày tạo/sửa</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @model IEnumerable<QuanlyquanNet.Data.KhuVuc>
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaKhuVuc</td>
                        <td>@item.TenKhuVuc</td>
                        <td>@(item.MoTa ?? "Không có")</td>
                        <td>@item.GiaMoiGio.ToString("N0") VNĐ</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.HinhAnh))
                            {
                                <img src="@item.HinhAnh" alt="@item.TenKhuVuc" style="max-width: 100px; max-height: 100px;" />
                            }
                            else
                            {
                                <span>Không có</span>
                            }
                        </td>
                        <td>@(item.NgayTao?.ToString("dd/MM/yyyy HH:mm") ?? "")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.MaKhuVuc" class="btn btn-info btn-sm">Chi tiết</a>
                            <a asp-action="Edit" asp-route-id="@item.MaKhuVuc" class="btn btn-warning btn-sm">Sửa</a>
                            <a asp-action="Delete" asp-route-id="@item.MaKhuVuc" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">Không có khu vực nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>