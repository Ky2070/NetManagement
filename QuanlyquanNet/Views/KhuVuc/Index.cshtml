@model IEnumerable<QuanlyquanNet.Data.KhuVuc>

@{
    ViewData["Title"] = "Danh sách khu vực";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Thêm khu vực</a>
</p>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-primary">
                <img src="@(!string.IsNullOrEmpty(item.HinhAnh) ? item.HinhAnh : "/images/placeholder.jpg")"
                     class="card-img-top" alt="Ảnh khu vực"
                     style="height: 180px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@item.TenKhuVuc</h5>
                    <p class="card-text text-muted">@item.MoTa</p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Details" asp-route-id="@item.MaKhuVuc" class="btn btn-sm btn-outline-info">🔍 Xem</a>
                    <a asp-action="Edit" asp-route-id="@item.MaKhuVuc" class="btn btn-sm btn-outline-warning">✏️ Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaKhuVuc" class="btn btn-sm btn-outline-danger">🗑️ Xoá</a>
                </div>
            </div>
        </div>
    }
</div>