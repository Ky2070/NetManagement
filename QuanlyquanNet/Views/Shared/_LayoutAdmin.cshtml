<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Quán Net</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500&family=Press+Start+2P&family=Rajdhani:wght@400;700&display=swap" rel="stylesheet">

    <style>
        body {
            background-color: #0f1115;
            color: #fff;
            font-family: 'Rajdhani', sans-serif;
        }

        .sidebar {
            width: 250px;
            min-height: 100vh;
            background-color: #1b1f24;
            color: #fff;
            padding: 20px;
        }

            .sidebar h2 {
                font-size: 1.5rem;
                font-family: 'Orbitron', sans-serif;
                margin-bottom: 1rem;
            }

            .sidebar ul {
                list-style: none;
                padding-left: 0;
            }

                .sidebar ul li {
                    margin: 10px 0;
                }

                    .sidebar ul li a {
                        color: #adb5bd;
                        text-decoration: none;
                        display: block;
                        padding: 8px 12px;
                        border-radius: 6px;
                        transition: all 0.2s ease-in-out;
                    }

                        .sidebar ul li a:hover,
                        .sidebar ul li a.active {
                            background-color: #343a40;
                            color: #fff;
                            transform: translateX(5px);
                        }

        .main-content {
            flex: 1;
            padding: 30px;
            position: relative;
            z-index: 1;
        }

            .main-content::before {
                content: "";
                background: url('https://wallpapercave.com/wp/wp6012294.jpg') no-repeat center center/cover;
                opacity: 0.1;
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                z-index: -1;
            }

        .container-flex {
            display: flex;
        }

        .navbar-brand {
            font-family: 'Orbitron', sans-serif;
            font-size: 1.3rem;
            letter-spacing: 1px;
        }

        table th, table td {
            vertical-align: middle;
            text-align: center;
        }

        /* Optional: glowing effect */
        .sidebar ul li a:hover {
            box-shadow: 0 0 10px #0ff;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <i class="bi bi-pc-display-horizontal me-2"></i> Quản Lý Quán Net
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/"><i class="bi bi-house-door me-1"></i> Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="/KhachHangs"><i class="bi bi-person me-1"></i> Khách hàng</a></li>
                    <li class="nav-item"><a class="nav-link" href="/MayTinh"><i class="bi bi-pc me-1"></i> Máy tính</a></li>
                    <li class="nav-item"><a class="nav-link" href="/KhuVuc"><i class="bi bi-geo-alt me-1"></i> Khu vực</a></li>
                    @{
                        var hoTen = Context.Session.GetString("HoTen");
                        if (!string.IsNullOrEmpty(hoTen))
                        {
                            <li class="nav-item">
                                <span class="nav-link text-white">Xin chào, <strong>@hoTen</strong></span>
                            </li>
                            <li class="nav-item mt-1">
                                <form method="post" asp-controller="User" asp-action="Logout" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-light ms-2">Đăng xuất</button>
                                </form>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <ul>
                <li><a href="/DIchVu"><i class="bi bi-tools"></i> Dịch Vụ</a></li>
                <li><a href="/DonHang"><i class="bi bi-cart"></i> Đơn Hàng</a></li>
                <li><a href="/GoiNap"><i class="bi bi-wallet2"></i> Gói Nạp</a></li>
                <li><a href="/NhiemVu"><i class="bi bi-check2-square"></i> Nhiệm Vụ</a></li>
                <li><a href="/LichSuNapTiens"><i class="bi bi-clock-history"></i> Lịch Sử Nạp Tiền</a></li>
                <li><a href="/LichSuDangNhaps"><i class="bi bi-clock-history"></i> Lịch Sử Đăng Nhập</a></li>
                <li><a href="/NguoiDungs"><i class="bi bi-people"></i> Người Dùng</a></li>
                <li><a href="/NhanVien"><i class="bi bi-person-badge"></i> Nhân Viên</a></li>
                <li><a href="/PhienChoi"><i class="bi bi-controller"></i> Phiên Chơi</a></li>
                <li><a href="/PhuThuongs"><i class="bi bi-cash-stack"></i> Phụ Thưởng</a></li>
                <li><a href="/ThongBaos"><i class="bi bi-bell"></i> Thông Báo</a></li>
                <li><a href="/ThongKe"><i class="bi bi-graph-up"></i> Thống Kê</a></li>
                <li><a href="/VaiTroes"><i class="bi bi-shield-lock"></i> Vai Trò</a></li>
                <li><a href="/VatPham"><i class="bi bi-box"></i> Vật Phẩm</a></li>
                <li><a href="/KhuyenMai"><i class="bi bi-wallet"></i> Khuyến Mãi</a></li>
                <li><a asp-controller="Admin" asp-action="DuyetBaoCao"><i class="bi bi-graph-up"></i>Xem báo cáo PDF</a></li>
            </ul>
        </div>

        <!-- Main Content -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    @await Html.PartialAsync("_Footer")

    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Optional click sound (add a short .mp3 file and uncomment JS below) -->
    <!--
    <audio id="clickSound" src="/sounds/click.mp3" preload="auto"></audio>
    <script>
        document.querySelectorAll('a').forEach(el => {
            el.addEventListener('click', () => {
                document.getElementById('clickSound').play();
            });
        });
    </script>
    -->
    @RenderSection("Scripts", required: false)
</body>
</html>
