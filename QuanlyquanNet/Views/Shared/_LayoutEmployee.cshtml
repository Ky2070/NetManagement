<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nhân Viên | Hệ Thống Quản Lý Quán Net</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Orbitron Font for gaming feel -->
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
            font-family: 'Orbitron', sans-serif;
        }

        .navbar-custom {
            background: linear-gradient(90deg, #1f1f1f, #2c2c2c);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.6);
        }

        .navbar-brand {
            font-size: 1.4rem;
        }

        .nav-link {
            color: #ffffff !important;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                color: #00e5ff !important;
                text-shadow: 0 0 5px #00e5ff;
            }

        .sidebar {
            width: 250px;
            min-height: 100vh;
            background-color: #1a1a1a;
            padding: 20px;
            border-right: 1px solid #2c2c2c;
        }

            .sidebar h4 {
                font-size: 1.3rem;
                margin-bottom: 1.5rem;
                color: #ffffff;
                text-transform: uppercase;
                letter-spacing: 1px;
            }

            .sidebar ul {
                list-style: none;
                padding-left: 0;
            }

                .sidebar ul li {
                    margin-bottom: 12px;
                }

                    .sidebar ul li a {
                        color: #aaa;
                        text-decoration: none;
                        padding: 10px 15px;
                        border-radius: 6px;
                        display: flex;
                        align-items: center;
                        transition: all 0.3s ease;
                        position: relative;
                    }

                        .sidebar ul li a i {
                            margin-right: 12px;
                            font-size: 1.1rem;
                        }

                        .sidebar ul li a:hover,
                        .sidebar ul li a.active {
                            background: linear-gradient(90deg, #00c6ff 0%, #0072ff 100%);
                            color: #fff;
                            box-shadow: 0 0 10px #0072ff;
                        }

        .main-content {
            flex: 1;
            padding: 30px;
            position: relative;
            z-index: 1;
        }

            .main-content::before {
                content: "";
                background: url('https://wallpapercave.com/wp/wp7097408.jpg') no-repeat center center/cover;
                opacity: 0.1;
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                z-index: -1;
            }

        .container-flex {
            display: flex;
        }

        .role-badge {
            background: linear-gradient(90deg, #ff8a00, #e52e71);
            color: white;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: bold;
            margin-left: 10px;
        }

        .btn-outline-light {
            border-color: #00e5ff;
            color: #00e5ff;
            transition: all 0.3s ease;
        }

            .btn-outline-light:hover {
                background-color: #00e5ff;
                color: #000;
            }
    </style>

</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand text-white fw-bold" href="/">
                <i class="bi bi-pc-display-horizontal me-2"></i> Quán Net
            </a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house-door"></i> Trang Chủ
                        </a>
                    </li>
                    @{
                        var hoTen = Context.Session.GetString("HoTen");
                        if (!string.IsNullOrEmpty(hoTen))
                        {
                            <li class="nav-item">
                                <span class="nav-link text-white">
                                    Xin chào, <strong>@hoTen</strong>
                                    <span class="role-badge">Nhân viên</span>
                                </span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="User" asp-action="Logout" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-light ms-2">Đăng xuất</button>
                                </form>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sidebar + Content -->
    <div class="container-flex">
        <!-- Sidebar -->
        <aside class="sidebar">
            <h4><i class="bi bi-list-task me-2"></i>Menu Nhân Viên</h4>
            <ul>
                <li><a href="/KhachHangs"><i class="bi bi-person"></i> Khách Hàng</a></li>
                <li><a href="/PhienChoi"><i class="bi bi-controller"></i> Phiên Chơi</a></li>
                <li><a href="/KhuVuc"><i class="bi bi-geo-alt"></i> Khu Vực</a></li>
                <li><a href="/KhuyenMai"><i class="bi bi-gift"></i> Khuyến Mãi</a></li>
                <li><a href="/ThongKe"><i class="bi bi-bar-chart-line"></i> Thống Kê</a></li>
                <li><a href="/LichSuDangNhaps"><i class="bi bi-clock-history"></i> Lịch Sử Đăng Nhập</a></li>
                <li><a asp-controller="Task" asp-action="Index"><i class="bi bi-check2-square"></i> Giao Nhiệm Vụ</a></li>
            </ul>
        </aside>

        <!-- Main content -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    @await Html.PartialAsync("_Footer")

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
