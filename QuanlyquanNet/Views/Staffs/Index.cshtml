@model IEnumerable<QuanlyquanNet.Data.NhanVien>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<h1 class="mb-4">Danh sách nhân viên</h1>

<p>
    <a asp-action="Add" class="btn btn-primary">Thêm nhân viên mới</a>
</p>

<!-- Form tìm kiếm -->
<form method="get" asp-action="Index" class="row g-2 mb-4">
    <div class="col-auto">
        <input type="text" name="searchString" class="form-control" placeholder="Tìm theo tên hoặc SĐT..." value="@Context.Request.Query["searchString"]" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-success">Tìm kiếm</button>
    </div>
</form>

@if (Model == null || !Model.Any())
{
    <p>Không có nhân viên nào trong hệ thống.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTrAZPpFJ3EQBFt8dbhn9FQy9AJUGDL0cdvaw&s" class="card-img-top" alt="Ảnh nhân viên">
                    <div class="card-body">
                        <h5 class="card-title">@item.HoTen</h5>
                        <p class="card-text">
                            <strong>Mã NV:</strong> @item.MaNhanVien<br />
                            <strong>SĐT:</strong> @item.SoDienThoai<br />
                            <strong>Ngày tạo:</strong> @item.NgayTao?.ToString("dd/MM/yyyy")<br />
                            <strong>Tài khoản:</strong> @item.MaNguoiDungNavigation?.TenDangNhap
                        </p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Detail" asp-route-id="@item.MaNhanVien" class="btn btn-sm btn-info">Chi tiết</a>
                        <a asp-action="Update" asp-route-id="@item.MaNhanVien" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.MaNhanVien" class="btn btn-sm btn-danger">Xóa</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
