@model IEnumerable<QuanlyquanNet.Data.GoiNap>

@{
    ViewData["Title"] = "Danh sách gói nạp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Thêm gói nạp</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.MaGoiNap)</th>
            <th>@Html.DisplayNameFor(model => model.TenGoi)</th>
            <th>@Html.DisplayNameFor(model => model.SoTien)</th>
            <th>@Html.DisplayNameFor(model => model.MaKhuyenMaiNavigation.TenKhuyenMai)</th>
            <th>@Html.DisplayNameFor(model => model.NgayTao)</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaGoiNap</td>
                <td>@item.TenGoi</td>
                <td>@item.SoTien</td>
                <td>@(item.MaKhuyenMaiNavigation != null ? item.MaKhuyenMaiNavigation.TenKhuyenMai : "Chưa có")</td>
                <td>@(item.NgayTao.HasValue ? item.NgayTao.Value.ToString("dd/MM/yyyy") : "Chưa có")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaGoiNap">🔍 Xem</a> |
                    <a asp-action="Edit" asp-route-id="@item.MaGoiNap">✏️ Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaGoiNap">🗑️ Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
