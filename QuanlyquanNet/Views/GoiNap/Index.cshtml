@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    ViewData["Title"] = "Danh sách gói nạp";
}

<div class="container mt-4">
    <h2>Danh sách gói nạp</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Thêm gói nạp mới</a>
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Mã gói nạp</th>
                <th>Tên gói</th>
                <th>Số tiền</th>
                <th>Khuyến mãi</th>
                <th>Ngày tạo</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @model IEnumerable<QuanlyquanNet.Data.GoiNap>
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaGoiNap</td>
                        <td>@item.TenGoi</td>
                        <td>@item.SoTien.ToString("N0") VNĐ</td>
                        <td>@(item.MaKhuyenMaiNavigation?.TenKhuyenMai ?? "Không có")</td>
                        <td>@(item.NgayTao?.ToString("dd/MM/yyyy HH:mm") ?? "")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.MaGoiNap" class="btn btn-info btn-sm">Chi tiết</a>
                            <a asp-action="Edit" asp-route-id="@item.MaGoiNap" class="btn btn-warning btn-sm">Sửa</a>
                            <a asp-action="Delete" asp-route-id="@item.MaGoiNap" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Không có gói nạp nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>