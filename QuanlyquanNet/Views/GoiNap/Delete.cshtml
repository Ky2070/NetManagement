@model QuanlyquanNet.Data.GoiNap

@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    ViewData["Title"] = "Xóa gói nạp";
}

<div class="container mt-4">
    <h2>Xóa gói nạp</h2>
    <h3>Bạn có chắc chắn muốn xóa gói nạp này?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-3">Mã gói nạp</dt>
            <dd class="col-sm-9">@Model.MaGoiNap</dd>
            <dt class="col-sm-3">Tên gói</dt>
            <dd class="col-sm-9">@Model.TenGoi</dd>
            <dt class="col-sm-3">Số tiền</dt>
            <dd class="col-sm-9">@Model.SoTien.ToString("N0") VNĐ</dd>
            <dt class="col-sm-3">Khuyến mãi</dt>
            <dd class="col-sm-9">@(Model.MaKhuyenMaiNavigation?.TenKhuyenMai ?? "Không có")</dd>
            <dt class="col-sm-3">Ngày tạo</dt>
            <dd class="col-sm-9">@(Model.NgayTao?.ToString("dd/MM/yyyy HH:mm") ?? "")</dd>
        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="MaGoiNap" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>