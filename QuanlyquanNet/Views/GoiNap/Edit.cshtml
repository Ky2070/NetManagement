@model QuanlyquanNet.Data.GoiNap

@{
    ViewData["Title"] = "Chỉnh sửa gói nạp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="TenGoi" class="control-label"></label>
        <input asp-for="TenGoi" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SoTien" class="control-label"></label>
        <input asp-for="SoTien" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MaKhuyenMai" class="control-label"></label>
        <select asp-for="MaKhuyenMai" class="form-control" asp-items="ViewBag.MaKhuyenMai"></select>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    </div>
</form>

<a asp-action="Index">Back to List</a>
