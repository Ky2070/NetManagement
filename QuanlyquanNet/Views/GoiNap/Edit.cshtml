@model QuanlyquanNet.Data.GoiNap

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Sửa gói nạp";
}

<div class="container mt-4">
    <h2>Sửa gói nạp</h2>
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MaGoiNap" />
        <div class="form-group">
            <label asp-for="TenGoi" class="control-label"></label>
            <input asp-for="TenGoi" class="form-control" required />
            <span asp-validation-for="TenGoi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SoTien" class="control-label"></label>
            <input asp-for="SoTien" class="form-control" type="number" step="1000" required />
            <span asp-validation-for="SoTien" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MaKhuyenMai" class="control-label"></label>
            <select asp-for="MaKhuyenMai" class="form-control" asp-items="ViewBag.MaKhuyenMai">
                <option value="">Không áp dụng khuyến mãi</option>
            </select>
            <span asp-validation-for="MaKhuyenMai" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Lưu" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}