@model QuanlyquanNet.Data.MayTinh

@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    ViewData["Title"] = "Chi tiết máy tính";
}

<div class="container mt-4">
    <h2>Chi tiết máy tính</h2>
    <div>
        <dl class="row">
            <dt class="col-sm-3">Mã máy tính</dt>
            <dd class="col-sm-9">@Model.MaMayTinh</dd>
            <dt class="col-sm-3">Khu vực</dt>
            <dd class="col-sm-9">@(Model.MaKhuVucNavigation?.TenKhuVuc ?? "Không có")</dd>
            <dt class="col-sm-3">Stt</dt>
            <dd class="col-sm-9">@Model.Stt</dd>
            <dt class="col-sm-3">Tên máy tính</dt>
            <dd class="col-sm-9">@Model.TenMayTinh</dd>
            <dt class="col-sm-3">Trạng thái</dt>
            <dd class="col-sm-9">@(Model.TrangThai ?? "Tắt")</dd>
            <dt class="col-sm-3">Ngày tạo</dt>
            <dd class="col-sm-9">@(Model.NgayTao?.ToString("dd/MM/yyyy HH:mm") ?? "")</dd>
        </dl>
    </div>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>