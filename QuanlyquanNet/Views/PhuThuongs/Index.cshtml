@model IEnumerable<QuanlyquanNet.Data.PhuThuong>

@{
    ViewData["Title"] = "Danh sách phần thưởng";
    var defaultImage = "https://img.freepik.com/vector-gratis/caja-regalo-fondo-blanco_1308-135727.jpg";
}

<div class="container mt-4">
    <h2 class="mb-4">🎁 Danh sách phần thưởng</h2>
    <div class="mb-3 text-end">
        <a class="btn btn-success" asp-action="Create">+ Thêm phần thưởng</a>
    </div>

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow border-success" style="min-width: 250px;">
                        <img src="@defaultImage" alt="Phần thưởng" class="card-img-top" style="height: 220px; object-fit: cover;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary fw-bold">@item.TenPhuThuong</h5>
                            <p class="card-text mb-2">
                                <strong>Loại:</strong> @item.LoaiPhuThuong <br />
                                <strong>Giá trị:</strong> @item.GiaTri <br />
                                <strong>Điểm cần đổi:</strong> <span class="text-danger fw-bold">@item.DiemCanDoi</span><br />
                                <strong>Ngày tạo:</strong> @item.NgayTao?.ToString("dd/MM/yyyy") <br />
                                <strong>Mã vật phẩm:</strong> @item.MaVatPhamNavigation?.MaVatPham
                            </p>
                            <div class="mt-auto d-flex justify-content-between gap-1">
                                <a class="btn btn-info btn-sm w-100" asp-action="Details" asp-route-id="@item.MaPhuThuong">Chi tiết</a>
                                <a class="btn btn-warning btn-sm w-100" asp-action="Edit" asp-route-id="@item.MaPhuThuong">Sửa</a>
                                <a class="btn btn-danger btn-sm w-100" asp-action="Delete" asp-route-id="@item.MaPhuThuong">Xoá</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">Chưa có phần thưởng nào.</div>
    }
</div>
