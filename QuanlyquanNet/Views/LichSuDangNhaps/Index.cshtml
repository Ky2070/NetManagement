@model IEnumerable<QuanlyquanNet.Data.LichSuDangNhap>

@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    ViewData["Title"] = "Lịch Sử Đăng Nhập";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Lịch Sử Đăng Nhập</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.TenDangNhap)</th>
                            <th>@Html.DisplayNameFor(model => model.HoTen)</th>
                            <th>@Html.DisplayNameFor(model => model.ThoiGianDangNhap)</th>
                            <th>Người Dùng</th>
                            <th>Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.TenDangNhap)</td>
                                <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                                <td>@Html.DisplayFor(modelItem => item.ThoiGianDangNhap)</td>
                                <td>@Html.DisplayFor(modelItem => item.MaNguoiDungNavigation.TenDangNhap)</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.MaDangNhap" class="btn btn-sm btn-info me-2">
                                        <i class="bi bi-eye-fill"></i> Chi Tiết
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaDangNhap" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash-fill"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


}